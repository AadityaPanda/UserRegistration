<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <title>Admin Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f8f9fa;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ccc;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        .actions button {
            margin-right: 5px;
        }
        /* Style for the search input when it starts with @ or # */
        .special-search {
            font-weight: bold;
            color: #007bff;
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
    <h1>Admin Dashboard</h1>
    <h2>Users</h2>

    <!-- Toast Message -->
    <% if (message) { %>
        <div class="toast-container position-fixed top-0 end-0 p-3">
            <div class="toast" style="background-color: #f8d7da; color: #721c24;" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <strong class="me-auto">Notification</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    <%= message.text %>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Unified Search Field -->
    <div class="d-flex align-items-center mb-3">
        <form action="/admin/search" method="GET" class="form-inline">
            <div class="form-group">
                <label for="searchQuery" class="sr-only">Search:</label>
                <input 
                    type="text" 
                    id="searchQuery" 
                    name="query" 
                    class="form-control form-control-sm" 
                    placeholder="Search by #ID, @username/email, or name" 
                    required
                    oninput="formatSearchInput()">
            </div>
            <button type="submit" class="btn btn-primary btn-sm ml-2">Search</button>
        </form>
        <button class="btn btn-secondary btn-sm ml-2" onclick="window.location.href='/admin'">Reset</button>
    </div>

    <!-- Create New User Button -->
    <button class="btn btn-primary mb-3" onclick="window.location.href='/admin/create'">Create New User</button>

    <!-- Display user results -->
    <% if (users && users.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Mobile No</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.firstname %></td>
                        <td><%= user.middlename %></td>
                        <td><%= user.lastname %></td>
                        <td><%= user.mobile_no %></td>
                        <td><%= user.active ? 'Active' : 'Inactive' %></td>
                        <td class="actions">
                            <button class="btn btn-warning btn-sm" onclick="window.location.href='/admin/edit/<%= user.id %>'">Edit</button>
                            <form action="/admin/delete/<%= user.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                            </form>
                            <% if (user.active) { %>
                                <form action="/admin/deactivate/<%= user.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-secondary btn-sm">Deactivate</button>
                                </form>
                            <% } else { %>
                                <form action="/admin/activate/<%= user.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-success btn-sm">Activate</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No users found matching your search criteria.</p>
    <% } %>

    <a href="/" class="btn btn-secondary mt-3">Logout</a>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        <% if (typeof message !== 'undefined') { %>
            toastr["<%= message.type %>"]("<%= message.text %>");
        <% } %>

        // Function to apply special formatting when the input starts with # or @
        function formatSearchInput() {
            const searchInput = document.getElementById('searchQuery');
            const value = searchInput.value;

            if (value.startsWith('#') || value.startsWith('@')) {
                searchInput.classList.add('special-search');
            } else {
                searchInput.classList.remove('special-search');
            }
        }
    </script>
</body>
</html>